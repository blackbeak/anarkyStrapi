    "alignment": {
      "type": "enumeration",
      "enum": [
        "left",
        "center",
        "right"
      ],
      "default": "center"
    },
    "backgroundColor": {
      "type": "enumeration",
      "enum": [
        "transparent",
        "light-gray",
        "brand-light",
        "white"
      ],
      "default": "transparent"
    },
    "showQuoteMarks": {
      "type": "boolean",
      "default": true
    }
